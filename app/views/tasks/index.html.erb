<h1>My tasks</h1>

<div class="tasks mt-3">
  <ul>
    <% @tasks.each do |task| %>
      <li>
      <%if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
      </li>
    <% end %>
  </ul>
</div>

<hr>
<%= link_to new_task_path, class: 'btn btn-primary' do %>
  <i class="fas fa-plus"></i> Create a new task
<% end %>
