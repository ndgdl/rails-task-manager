<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
     <input type="checkbox"<%='checked' if task.completed%>>
     <%= link_to task.title, task_path(task) %>
     <%= link_to 'Delete?', delete_task_path(task), method: :delete %>
     </li>
  <% end %>
</ul>

<hr>
<i class="fas fa-plus"></i>
<button>
  <%= link_to 'Add a new task', tasks_new_path %>
</button>
