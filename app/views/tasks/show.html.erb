<h1><%= @task.title %></h1>

<p id="details"><%= @task.details %></p>

<div class="div">
  <p>
    This task is <%= @task.completed ? 'completed' : 'not completed yet'%>
    <%if @task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
  </p>
</div>

<%= link_to 'Edit task', edit_task_path, class: 'btn btn-primary' %>
<br>
<%= link_to 'Back to List', tasks_path, class: 'btn btn-secondary' %>
